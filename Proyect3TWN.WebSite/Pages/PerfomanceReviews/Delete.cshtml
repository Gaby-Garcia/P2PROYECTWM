@page "{id:int}"
@model Proyect3TWN.WebSite.Pages.PerfomanceReviews.Delete
<head>
    <link rel="stylesheet" href="~/css/PerfomanceReview/DeleteP.css" asp-append-version="true"/>
</head>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Eliminar Evaluación de Desempeño</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="PerfomanceReviewsDto.id" />
                        <div class="form-group">
                            <label>Empleado</label>
                            <input readonly value="@Model.EmployeeName[Model.PerfomanceReviewsDto.ID_Employee]" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PerfomanceReviewsDto.EvaluationDate">Fecha de Evaluación</label>
                            <input readonly asp-for="PerfomanceReviewsDto.EvaluationDate" class="form-control" maxlength="45" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PerfomanceReviewsDto.Clasification">Clasificación</label>
                            <input readonly asp-for="PerfomanceReviewsDto.Clasification" class="form-control" maxlength="45" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PerfomanceReviewsDto.Comments">Comentarios</label>
                            <input readonly asp-for="PerfomanceReviewsDto.Comments" class="form-control" maxlength="45" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PerfomanceReviewsDto.Goals">Metas</label>
                            <input readonly asp-for="PerfomanceReviewsDto.Goals" class="form-control" maxlength="45" />
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary mr-3">Eliminar</button>
                                <a asp-page="/PerfomanceReviews/List" class="btn btn-secondary">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
