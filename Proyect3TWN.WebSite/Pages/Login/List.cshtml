@page
@model Proyect3TWN.WebSite.Pages.Login.List

@{
    ViewData["Title"] = "Login";
}
<body id="login-body">
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title text-center text-primary">Login</h2>
            <form method="post">
                <div class="mb-3">
                    <label for="Email" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="Email" name="Email" value="@Model.LoginDto.Email" required />
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="Password" name="Password" value="@Model.LoginDto.Password" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
                <a asp-page="/Login/SignUp" class="btn btn-success w-100">Sign Up</a>
            </form>
            @if (Model.Response != null && Model.Response.Errors.Count > 0)
            {
                <div class="mt-3">
                    @foreach (var error in Model.Response.Errors)
                    {
                        <div class="alert alert-danger">@error</div>
                    }
                </div>
            }
        </div>
    </div>
</div>
</body>

