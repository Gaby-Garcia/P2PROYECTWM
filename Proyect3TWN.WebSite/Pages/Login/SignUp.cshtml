@page
@model Proyect3TWN.WebSite.Pages.Users.SignUp

<style>
    /* Estilos personalizados para el formulario */
    .container-fluid {
        margin-top: 50px; /* Espacio superior */
    }

    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #81bece; /* Color de fondo del encabezado */
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        color: white;
        text-align: center;
        padding: 20px;
    }

    .card-body {
        padding: 40px;
    }

    .form-group {
        margin-bottom: 30px;
    }

    .form-control {
        border-radius: 15px;
    }

    .text-danger {
        color: #dc3545; /* Color de texto para los mensajes de error */
    }

    .btn-primary {
        background-color: #81bece; /* Color de fondo del botón primario */
        border-color: #81bece;
        border-radius: 15px;
    }

    .btn-primary:hover {
        background-color: #5ca9bf; /* Cambio de color al pasar el ratón */
        border-color: #5ca9bf;
    }

    .btn-secondary {
        background-color: #6c757d; /* Color de fondo del botón secundario */
        border-color: #6c757d;
        border-radius: 15px;
    }

    .btn-secondary:hover {
        background-color: #565e64; /* Cambio de color al pasar el ratón */
        border-color: #565e64;
    }

    .alert {
        border-radius: 15px;
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Registrar Usuario</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden"/>
                        <div class="form-group">
                            <label asp-for="UsersDto.UserName">Nombre de Usuario</label>
                            <input asp-for="UsersDto.UserName" class="form-control" maxlength="45"/>
                            <span class="text-danger" asp-validation-for="UsersDto.UserName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsersDto.Email">Correo Electrónico</label>
                            <input asp-for="UsersDto.Email" class="form-control" maxlength="100"/>
                            <span class="text-danger" asp-validation-for="UsersDto.Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsersDto.Password">Contraseña</label>
                            <input asp-for="UsersDto.Password" class="form-control" maxlength="100"/>
                            <span class="text-danger" asp-validation-for="UsersDto.Password"></span>
                        </div>
                        
                        @if (Model.Errors.Count > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                <ul>
                                    @foreach (var error in Model.Errors)
                                    {           
                                        <li>@error</li>
                                    }
                                </ul>
                            </div>
                        }
                        
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary mr-3">Registrar</button>
                                <a class="btn btn-secondary">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
