@page "{id:int}"
@model Proyect3TWN.WebSite.Pages.Department.Edit


<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Editing</h2>
            <form method="post">
                <input type="hidden" asp-for="DepartmentDto.id"/>
                <div class="form-group">
                    <label asp-for="DepartmentDto.Name"></label>
                    <input asp-for="DepartmentDto.Name" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="DepartmentDto.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentDto.Description"></label>
                    <input asp-for="DepartmentDto.Description" class="form-control" maxlength="100"/>
                    <span class="text-danger" asp-validation-for="DepartmentDto.Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentDto.Supervisor"></label>
                    <input asp-for="DepartmentDto.Supervisor" class="form-control" maxlength="100"/>
                    <span class="text-danger" asp-validation-for="DepartmentDto.Supervisor"></span>
                </div>
                
                @if (Model.Errors.Count > 0)
                {
                
                    <div class="alert alert-danger" role="alert">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>An error</li>
                            }
                        </ul>
                    </div>
                }
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Save</button>
                        <a class="btn btn-secondary"> Cancel </a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>