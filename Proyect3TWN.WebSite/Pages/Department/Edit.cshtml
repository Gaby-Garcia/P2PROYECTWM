@page "{id:int}"
@model Proyect3TWN.WebSite.Pages.Department.Edit


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Editar Departamento</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="DepartmentDto.id"/>
                        <div class="form-group">
                            <label asp-for="DepartmentDto.Name" class="text-muted">Nombre</label>
                            <input asp-for="DepartmentDto.Name" class="form-control" maxlength="100" placeholder="Nombre"/>
                            <span class="text-danger" asp-validation-for="DepartmentDto.Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DepartmentDto.Description" class="text-muted">Descripción</label>
                            <input asp-for="DepartmentDto.Description" class="form-control" maxlength="100" placeholder="Descripción"/>
                            <span class="text-danger" asp-validation-for="DepartmentDto.Description"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DepartmentDto.Supervisor" class="text-muted">Supervisor</label>
                            <input asp-for="DepartmentDto.Supervisor" class="form-control" maxlength="100" placeholder="Supervisor"/>
                            <span class="text-danger" asp-validation-for="DepartmentDto.Supervisor"></span>
                        </div>
                        
                        @if (Model.Errors.Count > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                <ul>
                                    @foreach (var error in Model.Errors)
                                    {
                                        <li>@error</li>
                                    }
                                </ul>
                            </div>
                        }
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary">Guardar</button>
                                <a asp-page="/Department/List" class="btn btn-secondary">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
