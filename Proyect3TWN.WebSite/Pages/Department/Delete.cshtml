@page "{id:int}"
@model Proyect3TWN.WebSite.Pages.Department.Delete

<style>


    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #81bece; /* Color de fondo del encabezado */
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        color: white;
        text-align: center;
        padding: 20px;
    }

    .card-body {
        padding: 40px;
    }

    .form-group {
        margin-bottom: 30px;
    }

    .form-control {
        border-radius: 15px;
    }

    .text-muted {
        color: #6c757d;
    }

    .btn-primary {
        background-color: #81bece; /* Color de fondo del botón primario */
        border-color: #81bece;
        border-radius: 15px;
    }

    .btn-primary:hover {
        background-color: #5ca9bf; /* Cambio de color al pasar el ratón */
        border-color: #5ca9bf;
    }

    .btn-secondary {
        background-color: #6c757d; /* Color de fondo del botón secundario */
        border-color: #6c757d;
        border-radius: 15px;
    }

    .btn-secondary:hover {
        background-color: #565e64; /* Cambio de color al pasar el ratón */
        border-color: #565e64;
    }

    .alert {
        border-radius: 15px;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Eliminar Departamento</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="DepartmentDto.id" />
                        <div class="form-group">
                            <label asp-for="DepartmentDto.Name" class="text-muted">Nombre</label>
                            <input readonly asp-for="DepartmentDto.Name" class="form-control" maxlength="45" />
                        </div>
                        <div class="form-group">
                            <label asp-for="DepartmentDto.Description" class="text-muted">Descripción</label>
                            <input readonly asp-for="DepartmentDto.Description" class="form-control" maxlength="100" />
                        </div>
                        <div class="form-group">
                            <label asp-for="DepartmentDto.Supervisor" class="text-muted">Supervisor</label>
                            <input readonly asp-for="DepartmentDto.Supervisor" class="form-control" maxlength="100" />
                        </div>
                        
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary">Eliminar</button>
                                <a asp-page="/Department/List" class="btn btn-secondary">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
