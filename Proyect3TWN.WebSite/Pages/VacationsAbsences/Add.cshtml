@page
@model Proyect3TWN.WebSite.Pages.VacationsAbsences.Add

<style>

    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #007bff; /* Color de fondo del encabezado azul */
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        color: white;
        text-align: center;
        padding: 20px;
    }

    .card-body {
        padding: 40px;
    }

    .form-group {
        margin-bottom: 30px;
    }

    .form-control {
        border-radius: 15px;
    }

    .btn-primary {
        background-color: #007bff; /* Color de fondo del botón primario azul */
        border-color: #007bff;
        border-radius: 15px;
    }

    .btn-primary:hover {
        background-color: #0056b3; /* Cambio de color al pasar el ratón */
        border-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d; /* Color de fondo del botón secundario */
        border-color: #6c757d;
        border-radius: 15px;
    }

    .btn-secondary:hover {
        background-color: #565e64; /* Cambio de color al pasar el ratón */
        border-color: #565e64;
    }

    .text-danger {
        font-size: 0.875em;
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Agregar Vacations and Absences</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" />
                        <div class="form-group">
                            <label asp-for="VacationsAbsencesDto.ID_Employee"></label>
                            <input asp-for="VacationsAbsencesDto.ID_Employee" class="form-control" maxlength="45" />
                            <span class="text-danger" asp-validation-for="VacationsAbsencesDto.ID_Employee"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VacationsAbsencesDto.Type"></label>
                            <input asp-for="VacationsAbsencesDto.Type" class="form-control" maxlength="45" />
                            <span class="text-danger" asp-validation-for="VacationsAbsencesDto.Type"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VacationsAbsencesDto.Deducted"></label>
                            <input asp-for="VacationsAbsencesDto.Deducted" class="form-control" maxlength="45" />
                            <span class="text-danger" asp-validation-for="VacationsAbsencesDto.Deducted"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VacationsAbsencesDto.StartDate"></label>
                            <input asp-for="VacationsAbsencesDto.StartDate" class="form-control" maxlength="45" />
                            <span class="text-danger" asp-validation-for="VacationsAbsencesDto.StartDate"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VacationsAbsencesDto.EndDate"></label>
                            <input asp-for="VacationsAbsencesDto.EndDate" class="form-control" maxlength="45" />
                            <span class="text-danger" asp-validation-for="VacationsAbsencesDto.EndDate"></span>
                        </div>
                        @if (Model.Errors.Count > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                <ul>
                                    @foreach (var error in Model.Errors)
                                    {
                                        <li>@error</li>
                                    }
                                </ul>
                            </div>
                        }
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary mr-3">Save</button>
                                <a class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
