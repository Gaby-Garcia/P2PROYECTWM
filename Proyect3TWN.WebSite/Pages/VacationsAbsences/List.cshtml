@page
@model Proyect3TWN.WebSite.Pages.VacationsAbsences.List
<head>
    <link rel="stylesheet" href="~/css/VacationsAbsences/Table.css" asp-append-version="true"/>
</head>
<h5>Vacations and Absences</h5>
<div class="container-fluid">
    <form method="get">
        <div class="row justify-content-center mb-4">
            <div class="col-md-4 text-center">
                <a asp-page="/VacationsAbsences/Add" class="btn btn-success-add">Add New</a>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-md-1"></div>

        <div class="col-10">
            <div class="table-container">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID Employee</th>
                            <th>Type</th>
                            <th>Deducted</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vacations in @Model.vacations)
                        {
                            <tr>
                                <td>@Model.EmployeeName[vacations.ID_Employee]</td>
                                <td>@vacations.Type</td>
                                <td>@vacations.Deducted</td>
                                <td>@vacations.StartDate.ToString("dd/MM/yyyy")</td>
                                <td>@vacations.EndDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-area="" asp-page="/VacationsAbsences/Edit" asp-route-id="@vacations.id" class="btn btn-primary" role="button">Edit</a>
                                        <a asp-area="" asp-page="/VacationsAbsences/Delete" asp-route-id="@vacations.id" class="btn btn-danger" role="button">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-md-1"></div>
    </div>
</div>
