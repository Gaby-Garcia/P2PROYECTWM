@page "{id:int}"
@model Proyect3TWN.WebSite.Pages.EmploymentHistory.Delete

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Delete Product Category</h2>
            <form method="post">
                <input type="hidden" asp-for="EmploymentHistoryDto.id" />
                <div class="form-group">
                    <label asp-for="EmploymentHistoryDto.ID_Employee"></label>
                    <input readonly asp-for="EmploymentHistoryDto.ID_Employee" class="form-control" maxlength="45" />
                </div>
                <div class="form-group">
                    <label asp-for="EmploymentHistoryDto.CompanyName"></label>
                    <input readonly asp-for="EmploymentHistoryDto.CompanyName" class="form-control" maxlength="45" />
                </div>
                <div class="form-group">
                    <label asp-for="EmploymentHistoryDto.CompanyPosition"></label>
                    <input readonly asp-for="EmploymentHistoryDto.CompanyPosition" class="form-control" maxlength="45" />
                </div>
                <div class="form-group">
                    <label asp-for="EmploymentHistoryDto.Description"></label>
                    <input readonly asp-for="EmploymentHistoryDto.Description" class="form-control" maxlength="45" />
                </div>
                <div class="form-group">
                    <label asp-for="EmploymentHistoryDto.QuitWork"></label>
                    <input readonly asp-for="EmploymentHistoryDto.QuitWork" class="form-control" maxlength="45" />
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Delete</button>
                        <a asp-page="./List" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>