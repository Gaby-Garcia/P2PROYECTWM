@page "{id:int}"
@model Proyect3TWN.WebSite.Pages.EmploymentHistory.Edit

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Editing</h2>
            <form method="post">
                <input type="hidden" asp-for="EmploymentHistoryDto.id"/>
                <div class="form-group">
                    <label asp-for="EmploymentHistoryDto.ID_Employee"></label>
                    <input asp-for="EmploymentHistoryDto.ID_Employee" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="EmploymentHistoryDto.ID_Employee"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmploymentHistoryDto.CompanyName"></label>
                    <input asp-for="EmploymentHistoryDto.CompanyName" class="form-control" maxlength="100"/>
                    <span class="text-danger" asp-validation-for="EmploymentHistoryDto.CompanyName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmploymentHistoryDto.CompanyPosition"></label>
                    <input asp-for="EmploymentHistoryDto.CompanyPosition" class="form-control" maxlength="100"/>
                    <span class="text-danger" asp-validation-for="EmploymentHistoryDto.CompanyPosition"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmploymentHistoryDto.Description"></label>
                    <input asp-for="EmploymentHistoryDto.Description" class="form-control" maxlength="100"/>
                    <span class="text-danger" asp-validation-for="EmploymentHistoryDto.Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmploymentHistoryDto.QuitWork"></label>
                    <input asp-for="EmploymentHistoryDto.QuitWork" class="form-control" maxlength="100"/>
                    <span class="text-danger" asp-validation-for="EmploymentHistoryDto.QuitWork"></span>
                </div>
                
                @if (Model.Errors.Count > 0)
                {
                
                    <div class="alert alert-danger" role="alert">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>An error</li>
                            }
                        </ul>
                    </div>
                }
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Save</button>
                        <a class="btn btn-secondary"> Cancel </a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>