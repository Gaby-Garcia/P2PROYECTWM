@page "{id:int}"
@model Proyect3TWN.WebSite.Pages.EmploymentHistory.Edit

<style>

    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #81bece; /* Color de fondo del encabezado */
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        color: white;
        text-align: center;
        padding: 20px;
    }

    .card-body {
        padding: 40px;
    }

    .form-group {
        margin-bottom: 30px;
    }

    .form-control {
        border-radius: 15px;
    }

    .text-danger {
        color: #dc3545; /* Color de texto para los mensajes de error */
    }

    .btn-primary {
        background-color: #81bece; /* Color de fondo del botón primario */
        border-color: #81bece;
        border-radius: 15px;
    }

    .btn-primary:hover {
        background-color: #5ca9bf; /* Cambio de color al pasar el ratón */
        border-color: #5ca9bf;
    }

    .btn-secondary {
        background-color: #6c757d; /* Color de fondo del botón secundario */
        border-color: #6c757d;
        border-radius: 15px;
    }

    .btn-secondary:hover {
        background-color: #565e64; /* Cambio de color al pasar el ratón */
        border-color: #565e64;
    }

    .alert {
        border-radius: 15px;
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Editar Historial Laboral</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="EmploymentHistoryDto.id"/>
                        <div class="form-group">
                            <label asp-for="EmploymentHistoryDto.QuitWork">QuitWork</label>
                            <input asp-for="EmploymentHistoryDto.QuitWork" class="form-control" maxlength="45"/>
                            <span class="text-danger" asp-validation-for="EmploymentHistoryDto.QuitWork"></span>
                        </div>
                         
                        <div class="form-group">
                            <label asp-for="EmploymentHistoryDto.CompanyName">Nombre de la Empresa</label>
                            <input asp-for="EmploymentHistoryDto.CompanyName" class="form-control" maxlength="100"/>
                            <span class="text-danger" asp-validation-for="EmploymentHistoryDto.CompanyName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmploymentHistoryDto.CompanyPosition">Cargo en la Empresa</label>
                            <input asp-for="EmploymentHistoryDto.CompanyPosition" class="form-control" maxlength="100"/>
                            <span class="text-danger" asp-validation-for="EmploymentHistoryDto.CompanyPosition"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmploymentHistoryDto.Description">Descripción</label>
                            <input asp-for="EmploymentHistoryDto.Description" class="form-control" maxlength="100"/>
                            <span class="text-danger" asp-validation-for="EmploymentHistoryDto.Description"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmploymentHistoryDto.ID_Employee">Employee</label>
                            <select asp-for="EmploymentHistoryDto.ID_Employee" class="form-control">
                                <option value="">Seleccionar Empleado</option>
                                @if (Model.Employees != null)
                                {
                                    @foreach (var employee in Model.Employees)
                                    {
                                        <option value="@employee.id">@employee.Name</option>
                                    }
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="EmploymentHistoryDto.ID_Employee"></span>
                        </div>
                        @if (Model.Errors.Count > 0 && Model.Errors !=null)
                        {
                            <div class="alert alert-danger" role="alert">
                                <ul>
                                    @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary mr-3">Guardar</button>
                                <a class="btn btn-secondary">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
