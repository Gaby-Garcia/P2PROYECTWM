@page
@model Proyect3TWN.WebSite.Pages.Employees.Delete


<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Delete Product Category</h2>
            <form method="post">
                <input type="hidden" asp-for="EmployeesDto.id" />
                <div class="form-group">
                    <label asp-for="EmployeesDto.Name"></label>
                    <input readonly asp-for="EmployeesDto.Name" class="form-control" maxlength="45" />
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.LastName"></label>
                    <input readonly asp-for="EmployeesDto.LastName" class="form-control" maxlength="100" />
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.BirthDate"></label>
                    <input readonly asp-for="EmployeesDto.BirthDate" class="form-control" maxlength="100"/>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.Gender"></label>
                    <input readonly asp-for="EmployeesDto.Gender" class="form-control" maxlength="100"/>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.Address"></label>
                    <input readonly asp-for="EmployeesDto.Address" class="form-control" maxlength="100"/>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.Phone"></label>
                    <input readonly asp-for="EmployeesDto.Phone" class="form-control" maxlength="100"/>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.Email"></label>
                    <input readonly asp-for="EmployeesDto.Email" class="form-control" maxlength="100"/>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.ID_Department"></label>
                    <input readonly asp-for="EmployeesDto.ID_Department" class="form-control" maxlength="100"/>
                </div>
                
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Delete</button>
                        <a asp-page="./List" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>