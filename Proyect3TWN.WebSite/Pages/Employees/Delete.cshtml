@page
@model Proyect3TWN.WebSite.Pages.Employees.DeleteModel

<style>

    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #81bece; /* Color de fondo del encabezado */
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        color: white;
        text-align: center;
        padding: 20px;
    }

    .card-body {
        padding: 40px;
    }

    .form-group {
        margin-bottom: 30px;
    }

    .form-control {
        border-radius: 15px;
    }

    .text-danger {
        color: #dc3545; /* Color de texto para los mensajes de error */
    }

    .btn-primary {
        background-color: #81bece; /* Color de fondo del botón primario */
        border-color: #81bece;
        border-radius: 15px;
    }

    .btn-primary:hover {
        background-color: #5ca9bf; /* Cambio de color al pasar el ratón */
        border-color: #5ca9bf;
    }

    .btn-secondary {
        background-color: #6c757d; /* Color de fondo del botón secundario */
        border-color: #6c757d;
        border-radius: 15px;
    }

    .btn-secondary:hover {
        background-color: #565e64; /* Cambio de color al pasar el ratón */
        border-color: #565e64;
    }

    .alert {
        border-radius: 15px;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Eliminar Empleado</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="EmployeesDto.id" />
                        <div class="form-group">
                            <label asp-for="EmployeesDto.Name">Nombre</label>
                            <input readonly asp-for="EmployeesDto.Name" class="form-control" maxlength="45" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.LastName">Apellido</label>
                            <input readonly asp-for="EmployeesDto.LastName" class="form-control" maxlength="100" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.BirthDate">Fecha de Nacimiento</label>
                            <input readonly asp-for="EmployeesDto.BirthDate" class="form-control" maxlength="100" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.Gender">Género</label>
                            <input readonly asp-for="EmployeesDto.Gender" class="form-control" maxlength="100" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.Address">Dirección</label>
                            <input readonly asp-for="EmployeesDto.Address" class="form-control" maxlength="100" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.Phone">Teléfono</label>
                            <input readonly asp-for="EmployeesDto.Phone" class="form-control" maxlength="100" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.Email">Email</label>
                            <input readonly asp-for="EmployeesDto.Email" class="form-control" maxlength="100" />
                        </div>
                        <div class="form-group">
                            <label>Departamento</label>
                            <input readonly value="@Model.DepartmentNames[Model.EmployeesDto.ID_Department]" class="form-control" />
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary">Eliminar</button>
                                <a asp-page="./List" class="btn btn-secondary">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
