@page
@model Proyect3TWN.WebSite.Pages.Employees.Add


<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Agregar Department</h2>
            <form method="post">
                <input type="hidden"/>
                <div class="form-group">
                    <label asp-for="EmployeesDto.Name"></label>
                    <input asp-for="EmployeesDto.Name" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="EmployeesDto.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.LastName"></label>
                    <input asp-for="EmployeesDto.LastName" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="EmployeesDto.LastName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.BirthDate"></label>
                    <input asp-for="EmployeesDto.BirthDate" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="EmployeesDto.BirthDate"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.Gender"></label>
                    <input asp-for="EmployeesDto.Gender" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="EmployeesDto.Gender"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.Address"></label>
                    <input asp-for="EmployeesDto.Address" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="EmployeesDto.Address"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.Phone"></label>
                    <input asp-for="EmployeesDto.Phone" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="EmployeesDto.Phone"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.Email"></label>
                    <input asp-for="EmployeesDto.Email" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="EmployeesDto.Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeesDto.ID_Department"></label>
                    <input asp-for="EmployeesDto.ID_Department" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="EmployeesDto.ID_Department"></span>
                </div>
                
                   @if (Model.Errors.Count > 0)
                                    {
                
                                        <div class="alert alert-danger" role="alert">
                                            <ul>
                                                @foreach (var error in Model.Errors)
                                                {           
                                                    <li>@error</li>
                                                }
                                            </ul>
                                        </div>
                                    }
                
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Save</button>
                        <a class="btn btn-secondary"> Cancel </a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>