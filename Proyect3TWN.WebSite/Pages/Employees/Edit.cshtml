@page "{id:int}"
@model Proyect3TWN.WebSite.Pages.Employees.Edit
<head>
    <link rel="stylesheet" href="~/css/Employee/EditEmployee.css" asp-append-version="true"/>
</head>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Editar Empleado</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="EmployeesDto.id" />
                        <div class="form-group">
                            <label asp-for="EmployeesDto.Name">Nombre</label>
                            <input asp-for="EmployeesDto.Name" class="form-control" maxlength="45" />
                            <span class="text-danger" asp-validation-for="EmployeesDto.Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.LastName">Apellido</label>
                            <input asp-for="EmployeesDto.LastName" class="form-control" maxlength="100" />
                            <span class="text-danger" asp-validation-for="EmployeesDto.LastName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.BirthDate">Fecha de Nacimiento</label>
                            <input asp-for="EmployeesDto.BirthDate" class="form-control" maxlength="100" />
                            <span class="text-danger" asp-validation-for="EmployeesDto.BirthDate"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.Gender">Género</label>
                            <input asp-for="EmployeesDto.Gender" class="form-control" maxlength="100" />
                            <span class="text-danger" asp-validation-for="EmployeesDto.Gender"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.Address">Dirección</label>
                            <input asp-for="EmployeesDto.Address" class="form-control" maxlength="100" />
                            <span class="text-danger" asp-validation-for="EmployeesDto.Address"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.Phone">Teléfono</label>
                            <input asp-for="EmployeesDto.Phone" class="form-control" maxlength="100" />
                            <span class="text-danger" asp-validation-for="EmployeesDto.Phone"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.Email">Email</label>
                            <input asp-for="EmployeesDto.Email" class="form-control" maxlength="100" />
                            <span class="text-danger" asp-validation-for="EmployeesDto.Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmployeesDto.ID_Department">Departamento</label>
                            <select asp-for="EmployeesDto.ID_Department" class="form-control">
                                <option value="">Seleccionar Departamento</option>
                                @if (Model.Departments != null)
                                {
                                    @foreach (var department in Model.Departments)
                                    {
                                        <option value="@department.id">@department.Name</option>
                                    }
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="EmployeesDto.ID_Department"></span>
                        </div>
                        @if (Model.Errors.Count > 0 && Model.Errors !=null)
                        {
                            <div class="alert alert-danger" role="alert">
                                <ul>
                                    @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary mr-3">Guardar</button>
                                <a asp-page="/Employees/List" class="btn btn-secondary">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
