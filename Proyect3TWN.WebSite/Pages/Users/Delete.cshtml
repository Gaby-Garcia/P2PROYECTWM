@page "{id:int}"
@model Proyect3TWN.WebSite.Pages.Users.Delete

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Delete Product Category</h2>
            <form method="post">
                <input type="hidden" asp-for="UsersDto.id" />
                <div class="form-group">
                    <label asp-for="UsersDto.UserName"></label>
                    <input readonly asp-for="UsersDto.UserName" class="form-control" maxlength="45" />
                </div>
                <div class="form-group">
                    <label asp-for="UsersDto.Email"></label>
                    <input readonly asp-for="UsersDto.Email" class="form-control" maxlength="45" />
                </div>
                <div class="form-group">
                    <label asp-for="UsersDto.Password"></label>
                    <input readonly asp-for="UsersDto.Password" class="form-control" maxlength="45" />
                </div>
                
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Delete</button>
                        <a asp-page="./List" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>